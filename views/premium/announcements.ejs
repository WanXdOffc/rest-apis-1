                                                        <% announcements.forEach(announcement => { %>
                                                                <hr class="mt-0">
                                                                <div class="d-flex align-items-start">
                                                                    <div class="flex-grow-1 me-2">
                                                                        <span class="mb-0"><span class="fs-6 badge text-white fw-bold bg-primary rounded-pill"><i class="fas fa-info-circle"></i> <%= announcement.title %></span><small class="fw-normal float-end"><%= announcement.date %></small></span>
                                                                        <p class="my-1" style="margin-top: 0.6rem !important">
                                                                            <ul>
                                                                                <% announcement.content.split('\n').forEach((line, index) => { %>
                                                                                    <li><a><%= line %></a></li>
                                                                                <% }); %>
                                                                            </ul>
                                                                        </p>
                                                                        <form action="/admin/announcements/edit/<%= announcement._id %>" method="post">
                                                                            <input  class="form-control" type="text" name="updatedTitle" placeholder="Judul Baru" required><br>
                                                                            <textarea  class="form-control" name="updatedContent" placeholder="Konten Baru" required></textarea><br>
                                                                            <button type="submit" class="btn btn-primary">Edit</button><br>
                                                                        </form>
                                                                        <form action="/admin/announcements/delete/<%= announcement._id %>" method="post"><br>
                                                                            <button type="submit" class="btn btn-danger">Hapus</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                        <% }); %>
